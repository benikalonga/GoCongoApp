<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/len_4"
        android:paddingRight="@dimen/len_4"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/ivId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stok"
                android:minWidth="?attr/actionBarSize"
                />
            <com.epsilonpros.gocongomagasin.views.FancyLayoutBK
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fcyConnection"
                android:padding="@dimen/len_4"
                android:enabled="false"
                app:fl_defaultColor="@color/trans"
                app:fl_borderColor="@color/green_500"
                app:fl_borderWidth="@dimen/len_1"
                app:fl_radius="@dimen/len_4"
                app:fl_disabledColor="@color/trans"
                app:fl_disabledBorderColor="@color/green_500"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    >

                    <com.epsilonpros.gocongomagasin.views.TextViewTeach
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCommande"
                        android:text="5 sac de twiga 5 sac de twiga 5 sac de twiga 5 sac de twiga"
                        android:textSize="@dimen/font_18"
                        android:textColor="@color/black"
                        app:police="roboto_reg"
                        />

                    <com.epsilonpros.gocongomagasin.views.TextViewTeach
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/len_8"
                        android:layout_marginBottom="@dimen/len_8"
                        android:padding="@dimen/len_2"
                        android:background="@color/grey_200"
                        android:id="@+id/tvDate"
                        android:text="2018/01/2012"
                        android:textSize="@dimen/font_14"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/ic_date"
                        android:drawablePadding="@dimen/len_4"
                        app:police="roboto_light"
                        />

                </LinearLayout>
            </com.epsilonpros.gocongomagasin.views.FancyLayoutBK>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/linearConnect"
            android:layout_marginTop="@dimen/len_8"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/len_40"
                android:layout_height="@dimen/len_56"
                android:layout_gravity="center"
                android:src="@drawable/ic_account_circle"
                app:civ_border_color="@color/grey_100"
                app:civ_border_width="@dimen/len_1"
                app:civ_border_overlay="true"
                app:civ_fill_color="@color/grey_200"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/len_4"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.epsilonpros.gocongomagasin.views.TextViewTeach
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="par "
                        android:textColor="@color/black"
                        app:police="roboto_light"
                        />
                    <com.epsilonpros.gocongomagasin.views.TextViewTeach
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beni KALONGA"
                        android:textColor="@color/colorPrimary"
                        app:police="roboto_reg"
                        />
                </LinearLayout>
                <com.epsilonpros.gocongomagasin.views.TextViewTeach
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015020059"
                    android:textColor="@color/black"
                    app:police="roboto_light"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            >
            <com.epsilonpros.gocongomagasin.views.FancyButtonBK
                android:id="@+id/fcyAnnuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/len_10"
                android:layout_margin="@dimen/len_8"
                android:enabled="true"
                app:fb_defaultColor="@color/grey_200"
                app:fb_focusColor="@color/grey_300"
                app:fb_text="Annuler"
                app:fb_textColor="@color/grey_500"
                app:fb_textSize="@dimen/font_18"
                app:fb_radius="@dimen/len_4"
                app:fb_borderColor="@color/grey_100"
                app:fb_borderWidth="@dimen/len_1"
                app:fb_disabledColor="@color/grey_100"
                app:fb_disabledTextColor="@color/grey_500"
                />
            <com.epsilonpros.gocongomagasin.views.FancyButtonBK
                android:id="@+id/fcyApprouver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/len_10"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginTop="@dimen/len_8"
                android:enabled="true"
                app:fb_defaultColor="@color/colorPrimary"
                app:fb_focusColor="@color/colorPrimaryDark"
                app:fb_text="Approuver"
                app:fb_textColor="@color/white"
                app:fb_textSize="@dimen/font_18"
                app:fb_radius="@dimen/len_4"
                app:fb_borderColor="@color/grey_100"
                app:fb_borderWidth="@dimen/len_1"
                app:fb_disabledColor="@color/grey_600"
                />
            <net.qiujuer.genius.ui.widget.Loading
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/loadingConnect"
                android:visibility="gone"
                app:gAutoRun="false"
                app:gProgressStyle="circle"
                app:gBackgroundColor="@color/trans"
                app:gBackgroundLineSize="@dimen/len_2"
                app:gForegroundColor="@color/colorPrimary"
                app:gForegroundLineSize="@dimen/len_2"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>