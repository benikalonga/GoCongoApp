<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/contentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        tools:visibility="invisible"
        >
        <com.epsilonpros.gocongomagasin.views.TextViewTeach
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Toutes les events"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_16"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            app:police="roboto_reg"
            />
        <com.epsilonpros.gocongomagasin.views.TextViewTeach
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actuellement en stock"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:marqueeRepeatLimit="marquee_forever"
            app:police="roboto_reg"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/contentProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/linearConnect"
        android:layout_marginTop="@dimen/len_8"
        tools:visibility="visible"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:layout_gravity="top"
            android:src="@drawable/ic_history"
            app:civ_border_color="@color/grey_400"
            app:civ_border_overlay="true"
            app:civ_fill_color="@color/grey_100"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/len_4"
            android:gravity="center_vertical"
            >
            <com.epsilonpros.gocongomagasin.views.TextViewTeach
                android:id="@+id/tvNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twiga Maize"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_16"
                android:singleLine="true"
                android:ellipsize="end"
                app:police="roboto_reg"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <com.epsilonpros.gocongomagasin.views.TextViewTeach
                    android:id="@+id/tvPrix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1205 FC p.u"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_date"
                    android:textSize="@dimen/font_14"
                    android:drawablePadding="@dimen/len_4"
                    android:layout_marginRight="@dimen/len_8"
                    app:police="roboto_light"
                    />
                <com.epsilonpros.gocongomagasin.views.TextViewTeach
                    android:id="@+id/tvQuantite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1205 pcs"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_stock_24"
                    android:textSize="@dimen/font_14"
                    android:drawablePadding="@dimen/len_4"
                    android:layout_marginRight="@dimen/len_8"
                    app:police="roboto_light"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
