<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/contentProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/linearConnect"
        android:layout_marginTop="@dimen/len_8"
        tools:visibility="gone"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_56"
            android:layout_gravity="center"
            android:src="@drawable/ic_icon_grey"
            app:civ_border_color="@color/grey_400"
            app:civ_border_width="@dimen/len_1"
            app:civ_border_overlay="true"
            app:civ_fill_color="@color/grey_100"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/len_4"
            android:gravity="center_vertical"
            >
            <com.epsilonpros.gocongomagasin.views.TextViewTeach
                android:id="@+id/tvNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twiga Maize"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_16"
                android:singleLine="true"
                android:ellipsize="end"
                app:police="roboto_reg"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.epsilonpros.gocongomagasin.views.TextViewTeach
                    android:id="@+id/tvQuantite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1205 pcs"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_stock_24"
                    android:textSize="@dimen/font_14"
                    android:drawablePadding="@dimen/len_4"
                    android:layout_marginRight="@dimen/len_8"
                    app:police="roboto_light"
                    />
                <com.epsilonpros.gocongomagasin.views.TextViewTeach
                    android:id="@+id/tvPrix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1205 FC p.u"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_money"
                    android:textSize="@dimen/font_14"
                    android:drawablePadding="@dimen/len_4"
                    android:layout_marginRight="@dimen/len_8"
                    app:police="roboto_light"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
